@{
    Layout = null;
}


<table class="table table-hover">
    <tr>
        <th>
            Imię
        </th>
        <th>
            Nazwisko
        </th>
        <th>
            Grupa
        </th>
        <th>
            Miasto
        </th>
        <th>
            Indeks
        </th>
    </tr>

    @foreach (var item in Model.StudentsPagedList)
    {
        <tr class="clickable-row" onclick="SetupInputs(@item.IDStudent);" id="@item.IDStudent">
            <td id="@item.IDStudent FN">
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td id="@item.IDStudent LN">
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td id="@item.IDStudent GN">
                @Html.DisplayFor(modelItem => item.Group.Name)
            </td>
            <td id="@item.IDStudent BP">
                @Html.DisplayFor(modelItem => item.BirthPlace)
            </td>
            <td id="@item.IDStudent IN">
                @Html.DisplayFor(modelItem => item.IndexNo)
            </td>
        </tr>
    }
</table>

<br />
@*Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount*@

@Html.PagedListPager(Model.StudentsPagedList, page => Url.Action("StudentsList",
    new { page, currentFilter = ViewBag.CurrentFilter }))

<div class="row">
    <div class="col-sm-4">
        <label>Grupa:</label>
    </div>
    <div class="col-sm-8 form-group">
        <input type="text" class="form-control" id="usr">
    </div>
</div>

<div class="row">
    <div class="col-sm-4">
        <label>Imię:</label>
    </div>
    <div class="col-sm-8 form-group">
        <input type="text" class="form-control" id="fname">
    </div>
</div>

<div class="row">
    <div class="col-sm-4">
        <label>Nazwisko:</label>
    </div>
    <div class="col-sm-8 form-group">
        <input type="text" class="form-control" id="lname">
    </div>
</div>

<div class="row">
    <div class="col-sm-4">
        <label>Miejsce urodzenia:</label>
    </div>
    <div class="col-sm-8 form-group">
        <input type="text" class="form-control" id="bplace">
    </div>
</div>

<div class="row">
    <div class="col-sm-4">
        <label>Data urodzenia:</label>
    </div>
    <div class="col-sm-8 form-group">
        <input type="text" class="form-control" id="bdate" placeholder="1/01/2016">
    </div>
</div>

<div class="row">
    <div class="col-sm-4">
        <label>Indeks:</label>
    </div>
    <div class="col-sm-8 form-group">
        <input type="text" class="form-control" id="inumber" value="@Model.Index">
    </div>
</div>

<div class="row">
    <div class="button-box col-sm-6">
    </div>
    <div class="button-box col-sm-6">
        <div class="button-box col-sm-2">
            <button type="button" class="btn btn-default pull-right btn-block">Nowy</button>
        </div>
        <div class="button-box col-sm-2">
            <button type="button" class="btn btn-default pull-right btn-block">Zapisz</button>
        </div>
        <div class="button-box col-sm-2">
            <button type="button" class="btn btn-default pull-right btn-block">Usuń</button>
        </div>
    </div>
</div>