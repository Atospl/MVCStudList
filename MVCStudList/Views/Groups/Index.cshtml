@model IEnumerable<MVCStudList.Models.Group>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Grupy</h2>

<p>
    @Html.ActionLink("Stwórz nową", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nazwa:
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.IDGroup }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.IDGroup }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.IDGroup })
        </td>
    </tr>
}

</table>
